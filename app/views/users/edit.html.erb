
<h2>User info</h2>
<%= form_for current_user do |f| %>

<% if flash[:info] %>
	<p><%= flash[:info] %></p>
<% else flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

  <h4>name</h4><%= f.text_field :name %>
  <h4>Image</h4><%= attachment_image_tag @user, :profile_image %>
  <%= f.attachment_field :profile_image, placeholder:"プロフィール画像" %>
  <h4>introduction</h4><%= f.text_field :introduction %><br>

  <%= f.submit 'Update User' %>

 <% end %>