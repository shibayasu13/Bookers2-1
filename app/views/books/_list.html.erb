<h2>New book</h2>
	<% if flash[:new] %>
		<p><%= flash[:new] %></p>
    <% else flash[:no] %>
		<p><%= flash[:no] %></p>
    <% end %>

	<% if book.errors.any? %>
  		<div id="error_explanation" class="alert alert-danger">
    		<ul>
      		<% book.errors.full_messages.each do |message| %>
       	 		<%= message %>
     	 	<% end %>
   	 		</ul>
 	 	</div>
 	 <% end %>

<%= form_for(book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>opinion</h4>
	<%= f.text_area :body %><br>
	<input type="submit" name="commit" value="Create Book"class="btn btn-primary col-xs-12" date-disable-with="CreateBook">

<% end %>
