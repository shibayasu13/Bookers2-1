<div class="container">
	<div class= "row" >
		<div class="col-xs-3">
			<% if flash[:info] %>
				<p><%= flash[:info] %></p>
			<% else flash[:notice] %>
				<p><%= flash[:notice] %></p>
			<% end %>

			<h2>User info</h2>
				<%= attachment_image_tag @book.user, :profile_image, fallback:"no_image.jpg" %>
			<table class="table table-striped　style">
				<colgroup span="2"></colgroup>
					<thead>
						<tr>
							<th>name</th>
							<th><%= @book.user.name %></p></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>introduction</td>
							<td><%= @book.user.introduction %></td>
						</tr>
					</tbody>
				</table>
				<h3>name</h3><p><%= @book.user.name %></p>
				<h3>introduction</h3><p><%= @book.user.introduction %></p>
				<%= link_to " ", user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>

			<%= render 'books/list', book: @book_new %>
		</div>
		<div class="col-xs-9">
			<table class="table table-striped">
				<colgroup span="3"></colgroup>
				<thead>
				</thead>
					<tr>
						<h4>Book detail</h4>
						<td><%= link_to user_path(current_user.id) do %>
								<%= attachment_image_tag @user, :profile_image,:fill, 60, 60, format: 'jpeg',class: "img-circle pull-left profile-img",  fallback:"no_image.jpg" %>
								<%=  current_user.name %>
							<% end %>
						</td>
						<td><%= link_to book_path(@book.id) do %>
							<%= @book.title %>
							<% end %>
						</td>
						<td><%= @book.body %></td>
					<% if @book.user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@book.id),class: "btn-sm btn-success" %></td>
						<td><%= link_to "Destroy", book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか", class:"btn-sm btn-danger" %></td>
					<% end %>
					</tr>
			</table>
		</div>
	</div>
</div>



