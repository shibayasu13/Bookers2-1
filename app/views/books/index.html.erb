<div class="container">
	<div class= "row" >
		<div class="col-xs-3">
				<%= render 'users/list', user: @user %>
				<%= link_to " ", edit_user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>

				<%= render 'books/list', book: @book %>
		</div>
		<div class="col-xs-9">
			<table class="table table-striped">
				<colgroup span="4"></colgroup>
				<tr>
					<h3>Books</h3>
				</tr>
					<tr>
						<th>image</th>
						<th>title</th>
						<th>opinion</th>
					</tr>
					<% @books.each do |book| %>
					<tr>
						<td><%= link_to user_path(book.user) do %>
						<%= attachment_image_tag @user, :profile_image,:fill, 60, 60, format: 'jpeg',class: "img-circle pull-left profile-img",  fallback:"no_image.jpg" %>
							<% end %>
						</td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
			</table>
		</div>
	</div>
</div>
